<UserControl x:Class="WpfAppFinalProject.UserControlAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppFinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical"> 
        <Button Width="200" Margin="10" Height="30" Command="{Binding AddProductCommand}">Add Product</Button>
        <Button Width="200" Margin="10" Height="30" Command="{Binding ViewProductCommand}">View Product</Button>  
    </StackPanel>
        <StackPanel>
            <ContentPresenter Content="{Binding ProductView}">
                
            </ContentPresenter>
        </StackPanel>
    </StackPanel>
</UserControl>
